<div class="home mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 my-3">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src={{this.image}} alt="Card image cap">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title" style="height: 50px;">{{this.name}}</h5>
                    </a>
                    <p class="card-text crop">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>